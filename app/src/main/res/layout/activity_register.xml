<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pictop"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/pictop" />
        <ImageView
            android:id="@+id/picleft"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/pichomeleft" />
        <ImageView
            android:id="@+id/picright"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="380dp"
            android:src="@drawable/pichomeright" />

        <TextView
            android:id="@+id/registerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:fontFamily="@font/poppinssemi"
            android:textColor="#000"
            android:textSize="35dp"
            android:text="REGISTER" />

        <EditText
            android:id="@+id/registerName"
            android:layout_below="@+id/registerText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textPersonName"
            android:hint="Enter your full name"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />


        <EditText
            android:id="@+id/registerUsername"
            android:layout_below="@+id/registerName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textPersonName"
            android:hint="Enter your email"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/registerPassword"
            android:layout_below="@+id/registerUsername"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />
        <EditText
            android:id="@+id/registerMajor"
            android:layout_below="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="text"
            android:hint="Major"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />
        <EditText
            android:id="@+id/registerDescription"
            android:layout_below="@+id/registerMajor"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textMultiLine"
            android:hint="Description"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnOpen"
            android:layout_below="@+id/registerDescription"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/ic_image"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp"
            android:alpha="0.90"
            android:layout_marginRight="30dp"
            android:background="@drawable/radius_formwhite"
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey"
            android:text="Select Picture . . ." />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/btnOpen"
            android:layout_below="@+id/registerDescription"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_picimg" />
        <Button
            android:id="@+id/registerButton"
            android:layout_below="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/radius_btnaksen"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:text="REGISTER" />

        <Button
            android:id="@+id/registerToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerButton"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins"
            android:text="@string/button_registered"
            android:textAllCaps="false"
            android:textColor="#92A7AB"
            android:textSize="12sp"
            app:cornerRadius="50dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

