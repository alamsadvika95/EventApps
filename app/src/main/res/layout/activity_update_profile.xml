<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pictop"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/pictop" />
        <ImageView
            android:id="@+id/picleft"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/pichomeleft" />
        <ImageView
            android:id="@+id/picright"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="380dp"
            android:src="@drawable/pichomeright" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back"
            android:layout_marginTop="-30dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="22dp"/>

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/back"
            android:src="@drawable/ic_bookmark"/>

        <TextView
            android:id="@+id/updateProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:fontFamily="@font/poppinssemi"
            android:textColor="#000"
            android:textSize="35dp"
            android:text="UPDATE MY PROFILE" />

        <EditText
            android:id="@+id/updateName"
            android:layout_below="@+id/updateProfileText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textPersonName"
            android:hint="Enter your full name"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />


        <EditText
            android:id="@+id/updateMajor"
            android:layout_below="@+id/updateName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="text"
            android:hint="Major"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />
        <EditText
            android:id="@+id/updateDescription"
            android:layout_below="@+id/updateMajor"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textMultiLine"
            android:hint="Description"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/newImageProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/btnOpen"
            android:layout_below="@+id/updateDescription"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_picimg"
            />
        <Button
            android:id="@+id/btnOpen"
            android:layout_below="@+id/updateDescription"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/ic_image"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp"
            android:alpha="0.90"
            android:layout_marginRight="30dp"
            android:background="@drawable/radius_formwhite"
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey"
            android:text="Select Picture . . ." />


        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="349dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/radius_btnaksen"
            android:fontFamily="@font/poppins"
            android:text="UPDATE"
            android:textColor="@color/white" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>