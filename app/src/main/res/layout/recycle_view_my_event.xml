<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/id_my_event">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/picadd"
        />
    <TextView
        android:id="@+id/viewEventName"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/viewEventContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewEventName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Content"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewEventId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewEventContent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        android:layout_toRightOf="@id/viewEventContent"
        android:fontFamily="@font/montserratthin"
        android:text="Email"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/viewEventCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewEventContent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Category"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewEventDateDisplay"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/viewEventCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/viewEventDate"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/viewEventDateDisplay"
        android:layout_below="@id/viewEventCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="2021/01/1"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/whiteblurred"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewEventId"
        android:layout_marginLeft="200dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_marginTop="5dp"
        android:textColor="@color/accent2"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Details Event"
        android:textSize="12sp" />

</RelativeLayout>