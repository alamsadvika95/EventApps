<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SeeNoteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back"/>
        <ImageView
            android:id="@+id/pictop"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/pictop" />
        <ImageView
            android:id="@+id/picleft"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/pichomeleft" />
        <ImageView
            android:id="@+id/picright"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="380dp"
            android:src="@drawable/pichomeright" />

        <TextView
            android:id="@+id/notesHeadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:fontFamily="@font/poppinssemi"
            android:textColor="#000"
            android:textSize="35dp"
            android:text="EVENT NOTE" />

        <EditText
            android:id="@+id/seeNoteDetail"
            android:layout_below="@+id/notesHeadText"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/radius_formwhite"
            android:elevation="5dp"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:minLines="1"
            android:lines="5"
            android:maxLines="10"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:textColor="#000"
            android:enabled="false"/>
        <Button
            android:id="@+id/deleteNotesButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/radius_btnaksen"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:text="DELETE NOTE" />

    </RelativeLayout>

</RelativeLayout>