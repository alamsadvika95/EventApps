<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.AddEventActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"/>

    <ImageView
        android:id="@+id/pictop"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="200dp"
        android:src="@drawable/pictop" />
    <ImageView
        android:id="@+id/picleft"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/pichomeleft" />
    <ImageView
        android:id="@+id/picright"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="380dp"
        android:src="@drawable/pichomeright" />

    <TextView
        android:id="@+id/addEventHeadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/poppinssemi"
        android:textColor="#000"
        android:textSize="35dp"
        android:text="ADD EVENT" />

    <TextView
        android:id="@+id/eventNameDisplay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/addEventHeadText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Name
    <EditText
        android:id="@+id/eventNameText"
        android:layout_below="@+id/addEventHeadText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/radius_formwhite"
        android:elevation="5dp"
        android:inputType="text"
        android:hint="Enter the name of your event"
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:textColor="#000" /> //Name

    <TextView
        android:id="@+id/eventCategoryDisplay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/eventNameDisplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Category"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Category
    <Spinner
        android:id="@+id/eventCategorySpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/eventNameDisplay"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"/> //Category

    <TextView
        android:id="@+id/eventDateDisplay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/eventCategoryDisplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Date
    <EditText
        android:id="@+id/eventDateText"
        android:layout_below="@+id/eventCategoryDisplay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/ic_date_icon"
        android:drawablePadding="20dp"
        android:hint="Tanggal Berangkat"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:textColorHint="#BACBCF" /> //Date

    <TextView
        android:id="@+id/eventContentDisplay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/eventDateDisplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Content"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Content
    <EditText
        android:id="@+id/eventContentText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/eventDateDisplay"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/radius_formwhite"
        android:elevation="5dp"
        android:inputType="text"
        android:hint="e.g Science, Technical etc.."
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:textColor="#000"/> //Content

    <TextView
        android:id="@+id/eventDurationDisplay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/eventContentDisplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Duration"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Duration
    <EditText
        android:id="@+id/eventDurationText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/eventContentDisplay"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/radius_formwhite"
        android:elevation="5dp"
        android:inputType="number"
        android:hint="in hours"
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:textColor="#000"/> //Duration

    <TextView
        android:id="@+id/eventCapacityDisplay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/eventDurationDisplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Capacity"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Capacity
    <EditText
        android:id="@+id/eventCapacityText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/eventDurationDisplay"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/radius_formwhite"
        android:elevation="5dp"
        android:inputType="number"
        android:hint="Maximum person can join "
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:textColor="#000"/> //Capacity

    <TextView
        android:id="@+id/eventDescriptionDisplay"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/eventCapacityDisplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="16sp" /> //Description
    <EditText
        android:id="@+id/eventDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/eventCapacityDisplay"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/radius_formwhite"
        android:elevation="5dp"
        android:inputType="text"
        android:hint="Description"
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:textColor="#000"/> //Description

    <Button
        android:id="@+id/addEventButton"
        android:layout_below="@+id/eventDescriptionDisplay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/radius_btnaksen"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:text="REGISTER THE EVENT" />

</RelativeLayout>