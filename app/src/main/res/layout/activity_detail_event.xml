<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailEventActivity">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="500dp"
        android:layout_height="550dp"
        android:src="@drawable/imagedetail"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_bacwhite" />
    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:layout_below="@id/back"
        android:fontFamily="@font/poppinssemi"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Event Details" />


    <ImageView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-210dp"
        android:src="@drawable/picwave" />

    <TextView
        android:id="@+id/eventNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Title"
        android:fontFamily="@font/poppins"
        android:textColor="#000"
        android:textSize="25dp"
        android:text="Event Name" />
    <TextView
        android:id="@+id/contentEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventNameDetail"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Content -"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/creatorEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentEventDetail"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Creator - "
        android:textSize="14sp" />
    <TextView
        android:id="@+id/contentEventDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventNameDetail"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/contentEventText"
        android:fontFamily="@font/montserrat"
        android:text="Science"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/creatorEventDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentEventText"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/creatorEventText"
        android:fontFamily="@font/montserrat"
        android:text="alamsadvika@gmail.com"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/durationEventDetail"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/creatorEventText"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppinssemi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="4"
        android:textSize="30dp"
        android:background="@drawable/radius_box"
        android:elevation="5dp"
        />

    <TextView
        android:id="@+id/duratioEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/durationEventDetail"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/montserrat"
        android:text="Duration (in hours)"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:elevation="5dp"
        />

    <TextView
        android:id="@+id/capacityEventDetail"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/creatorEventText"
        android:paddingTop="20dp"
        android:layout_toRightOf="@+id/durationEventDetail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppinssemi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="8"
        android:textSize="30dp"
        android:background="@drawable/radius_box"
        android:elevation="5dp"
        />


    <TextView
        android:id="@+id/capacityEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/duratioEventText"
        android:layout_below="@id/capacityEventDetail"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/montserrat"
        android:text="Capacity (in person)"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/dateEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/duratioEventText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinssemi"
        android:text="Date "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dateEventDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateEventText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:text="14 January 2020"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/descriptionEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateEventDetail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinssemi"
        android:text="Description "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/descriptionEventDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEventText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. L"
        android:textSize="12sp" />


    <Button
        android:id="@+id/joinEventButtton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/radius_btnaksen"
        android:fontFamily="@font/poppins"
        android:text="Join Event"
        android:layout_below="@id/descriptionEventDetail"
        android:textColor="#fff"
        android:elevation="5dp"/>

</RelativeLayout>