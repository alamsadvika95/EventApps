<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/id_join_event">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/picadd"
        />
    <TextView
        android:id="@+id/viewJoinName"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/viewJoinContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewJoinName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Content -"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/viewJoinContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewJoinName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Science "
        android:textSize="12sp" />
    <TextView
        android:id="@+id/viewJoinCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewJoinContentText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/viewJoinContentText"
        android:fontFamily="@font/montserratthin"
        android:text="alamsadvika@gmail.com"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/viewJoinId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewJoinContentText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        android:layout_toRightOf="@id/viewJoinContentText"
        android:fontFamily="@font/montserratthin"
        android:text="Email"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/viewJoinCreatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewJoinContentText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="@font/montserratthin"
        android:text="Creator -"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewJoinDateDisplay"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/viewJoinCreatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/viewJoinDate"
        android:fontFamily="@font/poppins"
        android:layout_toRightOf="@id/viewJoinDateDisplay"
        android:layout_below="@id/viewJoinCreatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:text="11 November 2021"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/deleteJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/whiteblurred"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/detailJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:fontFamily="@font/montserratthin"
        android:text="See Details"
        android:textColor="@color/accent2"
        android:textSize="12sp" />

</RelativeLayout>